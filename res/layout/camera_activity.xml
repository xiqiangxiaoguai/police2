<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="244px"
        android:background="@android:color/black"
        >
        <ImageButton 
            android:id="@+id/main_menu"
            android:layout_height="80px"
            android:layout_width="80px"
            android:layout_marginLeft="10px"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/main_menu"
            android:scaleType="fitXY"
            android:clickable="true"
            />
	   	<LinearLayout 
	            android:id="@+id/header"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:layout_centerInParent="true"
	            android:background="@android:color/transparent"
	            >
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="36sp"
	                android:textColor="@android:color/white"
	                android:text="@string/police_left"
	                android:gravity="bottom"
	                android:layout_marginRight="20px"/>
	            <ImageView 
	                android:layout_height="80px"
	                android:layout_width="80px"
	                android:src="@drawable/ic_launcher"/>
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="36sp"
	                android:textColor="@android:color/white"
	                android:text="@string/police_right"
	                android:gravity="bottom"
	                android:layout_marginLeft="20px"/>
	        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="360px"
        android:layout_marginTop="244px"
        android:background="@android:color/black"
        >
        
       <RelativeLayout
	        android:id="@+id/camera_layout"
	        android:layout_width="480dp"
	        android:layout_height="360dp"
	        android:background="@android:color/black"
	        android:gravity="top"
        	>
    	        <LinearLayout 
    	            android:id="@+id/bar_timer"
		            android:layout_width="wrap_content"
		            android:layout_height="24dp"
		            android:orientation="horizontal"
		            android:layout_alignParentBottom="true"
		            android:layout_alignParentRight="true"
		            android:visibility="invisible"
		            android:layout_marginRight="10dp"
		            >
		            <TextView 
		                android:id="@+id/recordType"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"/>
		            <ImageButton
			            android:id="@+id/redPoint"
			            android:layout_width="24dp"
			            android:layout_height="24dp"
			            android:scaleType="fitCenter"
			            android:src="@drawable/red_point"
			            android:background="#00000000"/>
		       		 <TextView 
			            android:id="@+id/timeCount"
			            android:layout_height="wrap_content"
			            android:layout_width="wrap_content"
			            android:text="@string/timeCount"
		            />
       			 </LinearLayout>

        </RelativeLayout>
        
    </RelativeLayout>
    <RelativeLayout 
        android:layout_height="250px"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@android:color/black"
        >
        <ImageButton 
            android:id="@+id/preview"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25px"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent"
            android:src="@android:color/white"
            android:scaleType="fitXY"/>
        <ImageButton 
            android:id="@+id/qiezi"
            android:layout_width="160px"
            android:layout_height="160px"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:src="@drawable/qiezi_button_press"
            android:scaleType="fitXY"/>
        <ImageButton 
            android:id="@+id/mode"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25px"
            android:background="@android:color/transparent"
            android:src="@drawable/mode_video"
            android:scaleType="fitXY"/>
    </RelativeLayout>
</RelativeLayout>
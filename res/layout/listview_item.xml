<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/friends_item_header_parent"
        android:layout_width="fill_parent"
        android:layout_height="32dip"
        android:background="#ffdedede"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/friends_item_header_text"
            android:layout_width="match_parent"
            android:layout_height="32dip"
            android:layout_gravity="top"
            android:gravity="left"
            android:paddingTop="2dip"
            android:paddingLeft="5dp"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="100dp">
        <ImageView 
            android:id="@+id/freinds_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:paddingLeft="2dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginLeft="10dp"/>
        <TextView
	        android:id="@+id/friends_item_time"
	        android:layout_width="fill_parent"
	        android:layout_height="64dip"
	        android:layout_marginLeft="10dp"
	        android:clickable="true"
	        android:gravity="bottom"
	        android:textColor="#ff005092"
	        android:textSize="32sp"
	        android:layout_toRightOf="@+id/freinds_image"
	        android:layout_above="@+id/friends_item_date"/>
	     <TextView
	        android:id="@+id/friends_item_date"
	        android:layout_width="fill_parent"
	        android:layout_height="32dip"
	        android:layout_marginLeft="10dp"
	        android:gravity="top"
	        android:textColor="#ff005092"
	        android:textSize="16sp"
	        android:layout_toRightOf="@+id/freinds_image"
	        android:layout_alignParentBottom="true" />
	     <ImageView android:layout_width="22dp"
	         android:layout_height="66dp"
	         android:layout_centerVertical="true"
	         android:layout_alignParentRight="true"
	         android:scaleType="fitXY"
	         android:layout_marginRight="10dp"
	         android:background="@android:color/transparent"
	         android:src="@drawable/arrow_right"/>
	</RelativeLayout>
</LinearLayout>